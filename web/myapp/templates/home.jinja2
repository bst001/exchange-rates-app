{% extends "base/layout.jinja2" %}
{% block title %}Last exchange rates{% endblock %}


{% block content %}
<div class="container text-center">
    <br>
    <h1>Last exchange rates</h1>
    <br>
    <div class="categories">
      {% if rates %}
      <table class="table table-striped table-sm table-bordered">
        <thead>
          <tr>
            <th scope="col">Currency</th>
            <th scope="col">Date</th>
            <th scope="col">Rate</th>
          </tr>
        </thead>
        <tbody>
          {% for rate in rates %}
            <tr>
              <td><a href="/history/{{ rate.currency_code }}">{{ rate.currency_code }}</a></td>
              <td>{{ rate.date }}</td>
              <td>{{ rate.rate }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      {% else %}
        No rates yet.
      {% endif %}
    </div>
</div>
{% endblock %}